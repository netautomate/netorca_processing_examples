{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.0.0",
        "id": "urn:uuid:{{ ansible_date_time.epoch }}",
        "label": "API Gateway Deployment",
        "remark": "Generated by NetOrca",
        "{{ item.new_declaration.declaration.name }}": {
            "class": "Tenant",
            "{{ item.new_declaration.declaration.name }}-app": {
                "class": "Application",
                "template": "http",
                "serviceMain": {
                    "class": "Service_HTTP",
                    "virtualAddresses": [
                        "{{ f5_virtual_address }}"
                    ],
                    "pool": "{{ item.new_declaration.declaration.name }}-pool",
                    "profileHTTP": {
                        "use": "http"
                    },
                    "profileTCP": {
                        "use": "tcp"
                    },
                    "iRules": [
                        {
                            "use": "{{ item.new_declaration.declaration.name }}-irule"
                        }
                    ]
                },
                "{{ item.new_declaration.declaration.name }}-pool": {
                    "class": "Pool",
                    "monitors": [
                        "http"
                    ],
                    "members": [
                        {
                            "servicePort": 80,
                            "serverAddresses": [
                                "{{ item.new_declaration.declaration.target_url | regex_replace('^https?://', '') | regex_replace('/.*$', '') }}"
                            ]
                        }
                    ]
                },
                "{{ item.new_declaration.declaration.name }}-irule": {
                    "class": "iRule",
                    "iRule": "when HTTP_REQUEST {\n  HTTP::uri [string map {\"{{ item.new_declaration.declaration.base_path }}\" \"/\"} [HTTP::uri]]\n}"
                }
            }
        }
    }
} 