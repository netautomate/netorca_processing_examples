{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/service.schema.json",
    "title": "WideIP",
    "description": "Cross DC WideIP load balancer on F5 GTM",
    "type": "object",
    "metadata": {
        "monthly_cost": 100,
        "cost_per_change": 500
    },
    "properties": {
        "name": {
            "type": "string",
            "examples": [
                "test-application-dev",
                "test-application-uat"
            ]
        },
        "dc1_server": {
            "type": "string",
            "format": "ipv4",
            "description": "IP of the DC1 server/vip"
        },
        "dc2_server": {
            "type": "string",
            "format": "ipv4",
            "description": "IP of the DC2 server/vip"
        }
    },
    "required": [
        "name",
        "dc1_server",
        "dc2_server"
    ]
}
